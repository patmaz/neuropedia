<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Admin true</title>
</head>
<body>
    <h1>Ahoj <%= user.username %></h1>
    <h1>add entry</h1>
    <div>
        <form method="post" action="/mongodb">
            title: <input type="text" id="title" name="title"><br>
            body: <textarea type="text" id="body" name="body"></textarea><br>
            <input type="submit" value="submit">
        </form>
    </div>
    <div>
        <h1>delete entry</h1>
        <form action="/mongodbdel" method="post">
            title: <input type="text" id="title" name="title"><br>
            <input type="submit" value="delete">
        </form>
    </div>
    <div>
        <% data.forEach(function(entry){ %>
            <p> <%= entry.title%> <p>
            <p> <%= entry.body%> <p>
        <% }); %>
    </div>
    <p><a href="/signout">sign out</a></p>
</body>
</html>